{
    "manifest_version": 3,
    "name": "AI Dost",
    "version": "1.0.0",
    "description": "Your friendly AI companion for coding, learning, and creative tasks.",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}